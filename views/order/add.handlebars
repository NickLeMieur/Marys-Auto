<body>
  <h1>
    Add Work Orders
  </h1>
  <div class="mainForm">
    <form method="post" action="./submitWorkOrder">
      <div class="controls">
        <div class="row">
          <div class="col-sm-4">
            <div class="form-group">
              <label for="form_name">First Name</label>
              <input id="lname" type="text" name="fname" class="form-control" placeholder="Tony">
              <div class="help-block with-errors"></div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="form-group">
              <label for="form_name">Last Name</label>
              <input id="lname" type="text" name="lname" class="form-control" placeholder="Fierro">
              <div class="help-block with-errors"></div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="form-group">
              <label for="form_phone">Phone</label>
              <input id="form_phone" type="tel" name="phoneNumber" class="form-control">
              <div class="help-block with-errors"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label for="form_phone">Service Name</label>
            <input id="form_phone" type="text" name="transactName" required="required" class="form-control"
              data-error="Enter service name" placeholder="Translate">
            <div class="help-block with-errors"></div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label for="form_control">Service Date</label>
            <input id="form_control" type="date" name="transactDate" required="required" class="form-control"
              data-error="Enter service date" placeholder="mm-DD-yyyy">
            <div class="help-block with-errors"></div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label for="form_name">Cost Estimate</label>
            <input id="cost" type="text" name="cost" class="form-control" required="required" data-error="Enter Cost"
              onkeypress='validate(event)' placeholder="200">
            <div class="help-block with-errors"></div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label for="form_name">Labor Estimate</label>
            <input id="form_phone" type="text" name="time" required="required" class="form-control"
              data-error="Enter time in hours" placeholder="3 hrs">
            <div class="help-block with-errors"></div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="form_message">Description</label>
            <textarea id="form_message" name="message" class="form-control" placeholder="Service Details" rows="4"
              required="required" data-error="send a message."></textarea>
            <div class="help-block with-errors"></div>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>

      <div class="col-md-12">
        <input type="submit" class="btn btn-warning btn-send" value="Submit Work Order">
      </div>

    </form>
  </div>
</body>
<footer>
  <p>First Version (V 1.00)</p>
</footer>